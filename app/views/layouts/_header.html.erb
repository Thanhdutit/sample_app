<header class="navbar navbar-fixed-top navbar-inverse">
  <div class="container">
    <%= link_to t("sample"), "#", id: "logo" %>
    <!-- <nav> Commented out for simplicity -->
    <ul class="nav navbar-nav navbar-right">
      <li><%= link_to t("home"), "#" %></li>
      <li><%= link_to t("help"), "#" %></li>
      <li><%= link_to t("English"), locale: "en" %></li>
      <li><%= link_to t("Vietname"), locale: "vi" %></li>
      <% if logged_in? %>
        <li><%= link_to t("login.user"), "#" %></li>
        <li class="dropdown">
          <%= link_to "#", class: "dropdown-toggle", "data-toggle": "dropdown" do %>
            <%= t "login.account" %><b class="caret"></b>
          <% end %>
          <ul class="dropdown-menu">
            <li><%= link_to t("login.profile"), current_user %></li>
            <li><%= link_to t("login.settings"), '#' %></li>
            <li class="divider"></li>
            <li><%= button_to t("login.logout"), logout_path, method: :delete %></li>


          </ul>
        </li>
      <% else %>
        <li><%= link_to t("login.login"), login_path %></li>
      <% end %>
    </ul>
    <!-- </nav> -->
  </div>
</header>
