<% provide :title, t("Signup.signup") %>
<h1><%= t("Signup.signup") %></h1>
<div class="row">
  <div class="col-md-6 col-md-offset-3">
    <%= form_for @user, url: signup_path do |f| %>
      <%= render "shared/error_messages"   %>
      <%= f.label :name, t("Signup.name") %>
      <%= f.text_field :name %>
      <%= f.label :email, t("Signup.email") %>
      <%= f.email_field :email %>
      <%= f.label :password ,t("Signup.password") %>
      <%= f.password_field :password %>
      <%= f.label :password_confirmation ,t("Signup.confirmation") %>
      <%= f.password_field :password_confirmation %>
      <%= f.submit t("Signup.create"), class: "btn btn-primary"%>
    <% end %>
  </div>
</div>
